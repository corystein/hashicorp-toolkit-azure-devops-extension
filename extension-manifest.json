{
    "manifestVersion": 1,
    "id": "hashicorp-toolkit-azure-devops-extension",
    "name": "HashiCorp Toolkit",
    "version": "0.0.11",
    "publisher": "cory-r-stein",
    "public": true,
    "targets": [{
        "id": "Microsoft.VisualStudio.Services"
    }],
    "description": "Release task for reading secrets from Hashi Vault for sharing values across releases.",
    "scopes": [
        "vso.build",
        "vso.release",
        "vso.serviceendpoint"
    ],
    "categories": [
        "Azure Pipelines"
    ],
    "tags": [
        "Hashi Vault",
        "Key",
        "Vault",
        "Secret",
        "Configuration"
    ],
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "license.md"
        }
    },
    "links": {
        "issues": {
            "uri": "https://github.com/corystein/ReadHashiVauleSecrets"
        },
        "getstarted": {
            "uri": "https://github.com/corystein/ReadHashiVauleSecrets"
        },
        "support": {
            "uri": "https://github.com/corystein/ReadHashiVauleSecrets"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/corystein/ReadHashiVauleSecrets"
    },

    "branding": {
        "color": "rgb(36, 43, 50)",
        "theme": "dark"
    },
    "icons": {
        "default": "images/extension-icon.png",
        "large": "images/extension-icon.png"
    },
    "files": [{
        "path": "tasks"
    }],

    "contributions": [{
        "id": "hashicorp-read-vault-secrets-task",
        "type": "ms.vss-distributed-task.task",
        "description": "Reads values from Hashi Vault key/value engines and create Azure DevOps variables.",
        "targets": [
            "ms.vss-distributed-task.tasks"
        ],
        "properties": {
            "name": "tasks/vault"
        }
    }]
}